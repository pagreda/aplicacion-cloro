{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Iniciar servidor FastAPI",
            "type": "shell",
            "command": "cd backend; python -m uvicorn main:app --reload --host 127.0.0.1 --port 8000",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "line": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Uvicorn running.*",
                    "endsPattern": "^.*Application startup complete.*"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
